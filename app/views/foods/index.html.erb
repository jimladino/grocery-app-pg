<div class="header">
<%= image_tag ("food.jpg") %>
 <div class="container">
   
   <h1>Food List</h>
   <h2><%= link_to "Add New Food Item", 'foods/new' %>    <%= link_to "Main Menu", '/' %></h2>
 </div>
</div>

<div class="flist">
 <div class="container">

 <table border = 1>
 	<tr>
 		<td><h3>Name</h3></td>
 		<td><h3>Cost</h3></td>
 		<td><h3>Unit QTY</h3></td>
 		<td><h3>Actions</h3></td>
 	</tr>
  <% @foods.each do |food| %>
  	<tr>
		<td><%= food.food_name %></td>
		<td><%=number_to_currency(food.cost) %></td>
		<td><%=food.unit_qty %></td>
		<td><%= link_to "Edit", edit_food_path(food) %>  <%= link_to "Delete", food, method: :delete, data: {confirm: "Are you sure?" } %></td>
	</tr>
  
<% end %>
		
 </div>
</div>
