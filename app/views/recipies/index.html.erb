<div class="header">
<center><%= image_tag ("food.jpg") %></center>
 <div class="container">
   
   <center><h1>Recipie List</h>
   <h2><%= link_to "Add New Recipie", 'recipies/new' %>    <%= link_to "Main Menu", '/' %></h2></center>
 </div>
</div>

<div class="rlist">
 <center><div class="container">

 <table border = 1>
 	<tr>
 		<td><h3>ID</h3></td>
 		<td><h3>Meal Name</h3></td>
 		<td><h3>Ingredients</h3></td>
 		<td><h3>Actions</h3></td>
 	</tr>
  <% @recipies.each do |r| %>
  	<tr>
		<td><%= r.meal_id %></td>
		<td><%= r.meal_name %></td>
  <td><%= r.food_id %></td>
		<td><%= link_to "Edit", edit_recipy_path(r) %>  <%= link_to "Delete", r, method: :deleter, data: {confirm: "Are you sure?" } %></td>  
	</tr>
  
<% end %>
		</center>
 </div>
</div>
