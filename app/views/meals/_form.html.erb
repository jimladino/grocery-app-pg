<div class="header">
<%= image_tag ("menu.jpg") %>
 <div class="container">

 </div>
</div>

<div class="form">
 <div class="container">
 
<%= form_for(@meal) do |f| %>
<p>
 <%= f.label(:image, "Image") %><br>
 <%= f.text_field(:image) %>
</p>
<p>
<%=  f.label(:meal_name, "Meal Name") %><br>
<%= f.text_field(:meal_name) %>
</p>
<p>
 <%=  f.label(:category, "Category") %><br>
<%= f.text_field(:category) %>
</p>
<p>
 <%= f.label(:servings, "Number of Servings") %><br>
 <%= f.number_field :servings %>
</p>
<p>
<%=  f.label(:prep_time, "Prep Time") %><br>
<%= f.text_field(:prep_time) %>
</p>

<%=  f.label(:food_id, "Ingredients") %>
<p style="font-size: 10px"><i>Hold CTRL Key to select multiple items</i></p>
<%= f.collection_select(:food_id, Foods.all, :id, :food_name, {:include_blank => false}, {:multiple => true})%>
</p>
<p>
 <%= f.submit "Save Changes" %>
</p>
 <% end %>  
  </div>
</div>